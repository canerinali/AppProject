@model DAL.Dto.DashboardDto
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
 
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-users fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.ToplamUye</div>
                        <div>Toplam Üye Sayısı</div>
                    </div>
                </div>
            </div>
         
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-ticket"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.SatilanBiletSayisi</div>
                        <div>Toplam Satılan Bilet Sayısı</div>
                    </div>
                </div>
            </div>
        
        </div>
    </div>
</div>
<!-- /.row -->
