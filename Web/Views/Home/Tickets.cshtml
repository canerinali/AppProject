@model List<DAL.Dto.PassengerAndTicketDto>
@{
    ViewBag.Title = "Tickets";
    Layout = "~/Views/_LayoutPage.cshtml";
}


<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Biletler
            <a href="@Url.Action("NewTickets", "Home")" class="btn btn-success pull-right" style=" margin-top: -8px;">Yeni Ekle</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Kalkış Noktası</th>
                            <th>Varış Noktası</th>
                            <th>Adı</th>
                            <th>Soyadı</th>
                            <th>Yaşı</th>
                            <th>Tarih</th>
                            <th>Firma</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{int trcount = 0;}
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (item.PassengerDtos.Count > 0)
                                {
                                    <tr>
                                        <td rowspan="@item.PassengerDtos.Count()" style="text-align:center;vertical-align: middle;" valign="middle">@item.ToCity </td>
                                        @*<td rowspan="@item.Subs.Count()" style="text-align:center" valign="middle">@item.UserName </td>
                                            <td rowspan="@item.Subs.Count()" style="text-align:center" valign="middle">@item.CreatedDate </td>*@
                                        <td rowspan="@item.PassengerDtos.Count()" style="text-align:center;vertical-align: middle;" valign="middle">@item.FromCity</td>
                                        @{int i = 0; }
                                        @foreach (var itemInfo in item.PassengerDtos)
                                        {
                                            if (i > 0)
                                            {
                                                @: </tr><tr>
                                            }
                                            <td>@itemInfo.Name</td>
                                            <td>@itemInfo.Surname</td>
                                            <td>@itemInfo.Age</td>
    <td>@item.CreatedDate.ToString("G")</td>
    <td>@item.Company</td>


                                            i++;

                                        }

                                    </tr>
                                    trcount++;
                                }
                                @*<tr>
                                    <td>@item.Passenger</td>
                                    <td>@item.ToCity</td>
                                    <td>@item.FromCity</td>
                                    <td>@item.TotalCount</td>
                                    <td>@item.CreatedDate.ToString("G")</td>


                                </tr>*@
                            }
                        }
                       

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
