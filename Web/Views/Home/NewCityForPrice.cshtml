@model DAL.Dto.CityAndPriceDto
@{
    ViewBag.Title = "NewCityForPrice";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Şehir Fiyat Tanımı
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                 @using (Html.BeginForm("NewCityForPrice", "Home", FormMethod.Post))
                 {
                            <div class="form-group">
                                <label>Kalkış Noktası</label>
                                @Html.DropDownListFor(x => x.ToCityId, new SelectList(ViewBag.toCity, "Id", "Name"), "-- Kalkış Noktası Seçiniz --", new { @class = "form-control" })
                            </div>
                     <div class="form-group">
                         @Html.DropDownListFor(x => x.FromCityId, new SelectList(ViewBag.fromCity, "Id", "Name"), "-- Varış Noktası Seçiniz --", new { @class = "form-control" })
                     </div>
    <div class="form-group">
        @Html.DropDownListFor(x => x.CompanyId, new SelectList(ViewBag.company, "Id", "Name"), "-- Firma Seçiniz --", new { @class = "form-control" })
    </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x=>x.Price,new {@class="form-control"})
                            </div>
  
                                  <button type="submit" class="btn btn-default">Kaydet</button>

                 }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
