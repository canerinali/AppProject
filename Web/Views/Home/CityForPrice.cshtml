@model List<DAL.Dto.CityAndPriceDto>
@{
    ViewBag.Title = "CityForPrice";
    Layout = "~/Views/_LayoutPage.cshtml";
}
<div class="row">
    <div class="col-lg-12">
     
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Şehir fiyat Tanımları
            <a href="@Url.Action("NewCityForPrice","Home")" class="btn btn-success pull-right" style=" margin-top: -8px;">Yeni Ekle</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Kalkış Noktası</th>
                            <th>Varış noktası</th>
                            <th>Fiyat</th>
                            <th>Firma</th>
                            <th>Ayarlar</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ToCityName</td>
                                <td>@item.FromCityName</td>
                                <td>@item.Price</td>
                                <td>@item.Company</td>
                                <td>
                                    <a href="@Url.Action("NewCityForPrice",new{id=item.Id})" class="btn btn-success"> Düzenle</a>
                                    <a href="@Url.Action("DeleteCityPrice",new{id=item.Id})" class="btn btn-danger"> Sil</a>
                                </td>
                               
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
