@model List<DAL.Dto.CompanyDto>
@{
    ViewBag.Title = "CompanyIndex";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Biletler
            <a href="@Url.Action("NewCompany", "Home")" class="btn btn-success pull-right" style=" margin-top: -8px;">Yeni Ekle</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Şirket</th>
                            <th>Açıklama</th>
                            <th>Ayarlar</th>


                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a href="@Url.Action("NewCompany",new{id=item.Id})" class="btn btn-success"> Düzenle</a>
                                        <a href="@Url.Action("DeleteCompany",new{id=item.Id})" class="btn btn-danger"> Sil</a>
                                    </td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
